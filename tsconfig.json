{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2018"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/*.test.ts"]
}
